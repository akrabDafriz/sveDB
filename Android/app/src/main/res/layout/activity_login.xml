<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/svebg"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/swordcraftpng"
        android:layout_width="311dp"
        android:layout_height="625dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="@+id/registerBg"
        app:layout_constraintTop_toTopOf="@+id/svedbtitle"
        app:srcCompat="@drawable/swordcrtaft" />

    <ImageView
        android:id="@+id/emailBg"
        android:layout_width="274dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/svedbtitle"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/svedbtitle"
        app:layout_constraintTop_toBottomOf="@+id/svedbtitle"
        app:srcCompat="@drawable/edit_text_bg" />

    <ImageView
        android:id="@+id/passwordBg"
        android:layout_width="274dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/emailBg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailBg"
        app:layout_constraintTop_toBottomOf="@+id/login_email"
        app:srcCompat="@drawable/edit_text_bg" />

    <ImageView
        android:id="@+id/registerBg"
        android:layout_width="182dp"
        android:layout_height="86dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/passwordBg"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/passwordBg"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:srcCompat="@drawable/edit_text_bg" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="email address"
        android:fontFamily="@font/captainmeredith"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/emailBg"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/emailBg"
        app:layout_constraintTop_toTopOf="@+id/emailBg" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/captainmeredith"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordBg"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/passwordBg"
        app:layout_constraintTop_toTopOf="@+id/passwordBg" />

    <TextView
        android:id="@+id/donthaveacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/captainmeredith"
        android:text="Don't have an account?"
        app:layout_constraintEnd_toEndOf="@+id/passwordBg"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/passwordBg"
        app:layout_constraintTop_toTopOf="@+id/registerBg" />

    <TextView
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/captainmeredith"
        android:text="Register Now"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/donthaveacc"
        app:layout_constraintStart_toStartOf="@+id/donthaveacc"
        app:layout_constraintTop_toBottomOf="@+id/donthaveacc" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LOG IN"
        android:backgroundTint="#800020"
        app:layout_constraintEnd_toEndOf="@+id/passwordBg"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/passwordBg"
        app:layout_constraintTop_toBottomOf="@+id/passwordBg" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="215dp"
        android:layout_height="126dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shadowverse_logo" />

    <TextView
        android:id="@+id/svedbtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SVE Database"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


</androidx.constraintlayout.widget.ConstraintLayout>