<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/svebg"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_bg_register"
        android:layout_width="250dp"
        android:layout_height="178dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/sveLogo"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/sveLogo"
        app:layout_constraintTop_toBottomOf="@+id/register_title"
        app:srcCompat="@drawable/edit_text_bg" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:ems="20"
        android:fontFamily="@font/captainmeredith"
        android:hint="  name"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/register_bg_register"
        app:layout_constraintStart_toStartOf="@+id/register_bg_register"
        app:layout_constraintTop_toTopOf="@+id/register_bg_register" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:bufferType="spannable"
        android:ems="10"
        android:fontFamily="@font/captainmeredith"
        android:hint="  password"
        android:inputType="textPassword"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/register_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_email"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:ems="10"
        android:fontFamily="@font/captainmeredith"
        android:hint="  email address"
        android:inputType="textEmailAddress"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/register_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_name"
        app:layout_constraintTop_toBottomOf="@+id/register_name" />

    <ImageView
        android:id="@+id/sveLogo"
        android:layout_width="215dp"
        android:layout_height="126dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shadowverse_logo" />

    <TextView
        android:id="@+id/svedbtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SVE Database"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sveLogo" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#800020"
        android:text="REGISTER"
        app:layout_constraintEnd_toEndOf="@+id/register_bg_register"
        app:layout_constraintStart_toStartOf="@+id/register_bg_register"
        app:layout_constraintTop_toBottomOf="@+id/register_bg_register" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/captainmeredith"
        android:text="Register your account"
        android:textSize="26sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/svedbtitle"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/svedbtitle"
        app:layout_constraintTop_toBottomOf="@+id/svedbtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>