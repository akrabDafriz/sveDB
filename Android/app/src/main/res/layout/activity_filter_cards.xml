<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/svebg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/sveLogo"
        android:layout_width="215dp"
        android:layout_height="126dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shadowverse_logo" />

    <TextView
        android:id="@+id/svedbtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SVE Database"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sveLogo" />

    <ImageView
        android:id="@+id/textbg"
        android:layout_width="341dp"
        android:layout_height="397dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svedbtitle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/edit_text_bg" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:hint="Name"
        app:layout_constraintStart_toStartOf="@+id/textbg"
        app:layout_constraintTop_toTopOf="@+id/textbg" />

    <Spinner
        android:id="@+id/classSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/typeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/typeSpinner" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/nameEditText"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

    <EditText
        android:id="@+id/costEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Cost"
        app:layout_constraintStart_toStartOf="@+id/classSpinner"
        app:layout_constraintTop_toBottomOf="@+id/classSpinner" />

    <EditText
        android:id="@+id/statsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Stats"
        app:layout_constraintStart_toStartOf="@+id/costEditText"
        app:layout_constraintTop_toBottomOf="@+id/costEditText" />

    <EditText
        android:id="@+id/effectsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Effects"
        app:layout_constraintStart_toStartOf="@+id/statsEditText"
        app:layout_constraintTop_toBottomOf="@+id/statsEditText" />

    <Button
        android:id="@+id/applyFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Apply Filter"
        android:backgroundTint="#C19A6B"
        app:layout_constraintBottom_toBottomOf="@+id/textbg"
        app:layout_constraintEnd_toEndOf="@+id/textbg"
        app:layout_constraintStart_toStartOf="@+id/textbg" />

</androidx.constraintlayout.widget.ConstraintLayout>
